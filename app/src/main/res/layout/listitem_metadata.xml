<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="@dimen/default_padding_list_item">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_radius_metadata_item"
        android:orientation="vertical"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/metadataKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"/>


            <TextView
                android:id="@+id/metadataValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:background="@drawable/corner_radius_metadata_item_subtext"
                android:gravity="center_vertical|start"
                android:maxLines="5"
                android:minHeight="40dp"
                android:padding="8dp"
                android:textIsSelectable="true"/>


    </LinearLayout>
</FrameLayout>
