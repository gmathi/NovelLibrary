<resources>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorLightKnight</item>
        <item name="colorPrimaryDark">@color/colorDarkKnight</item>
        <item name="colorAccent">@color/colorAccent_Alternative</item>
        <item name="android:windowBackground">@color/colorDarkKnight</item>

        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:navigationBarColor">@color/black_transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorLightKnight</item>
        <item name="colorPrimaryDark">@color/colorDarkKnight</item>
        <item name="colorAccent">@color/colorTextWarningRed</item>
        <item name="android:windowBackground">@color/colorAccent_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:navigationBarColor">@color/colorLightKnight</item>

    </style>

    <style name="DarkTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorLightKnight</item>
        <item name="colorPrimaryDark">@color/colorDarkKnight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot_dark</item>
        <item name="line_color">@color/colorLine_dark</item>
        <item name="title_color">@color/colorTextTitle_dark</item>
        <item name="subtitle_color">@color/colorTextSubtitle_dark</item>
        <item name="content_color">@color/colorTextContent_dark</item>
        <item name="card_color">@color/white</item>
        <item name="drawer_color">@color/colorPrimaryDark_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/colorAccent_dark</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:navigationBarColor">@color/colorDarkKnight</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="DarkTheme_DarkSide" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorLightKnight</item>
        <item name="colorPrimaryDark">@color/colorDarkKnight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="card_color">@color/colorLightKnight</item>
        <item name="drawer_color">@color/colorPrimaryText</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/colorDarkKnight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:navigationBarColor">@color/colorDarkKnight</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- Custom theme for Material Dialogs-->
        <item name="md_color_title">@color/colorTextTitle_dark</item>
        <item name="md_color_content">@color/colorTextContent_dark</item>
        <item name="md_color_button_text">@color/colorAccent</item>
        <item name="md_background_color">@color/colorDarkKnight</item>

        <!-- Force time picker dialog to use spinner mode -->
        <item name="android:timePickerMode">spinner</item>
        <item name="android:timePickerStyle">@style/TTSTimeStopPicker</item>
    </style>

    <!-- User Theme application theme. -->
    <style name="UserTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorLightKnight</item>
        <item name="colorPrimaryDark">@color/colorDarkKnight</item>
        <item name="android:windowBackground">@color/colorDarkKnight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:navigationBarColor">@color/colorStatusDark</item>
    </style>

    <style name="AboutTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorLightKnight</item>
        <item name="colorPrimaryDark">@color/colorDarkKnight</item>
        <item name="colorAccent">@color/colorAccent_Alternative</item>
        <item name="root_color">@color/colorRoot_dark</item>
        <item name="line_color">@color/colorLine_dark</item>
        <item name="title_color">@color/colorTextTitle_dark</item>
        <item name="subtitle_color">@color/colorTextSubtitle_dark</item>
        <item name="content_color">@color/colorTextContent_dark</item>
        <item name="card_color">@color/colorPrimaryDark_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowBackground">@color/colorAccent_dark</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:navigationBarColor">@color/colorDarkKnight</item>
    </style>

    <style name="LightTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="root_color">@color/colorRoot_light</item>
        <item name="line_color">@color/colorLine_light</item>
        <item name="title_color">@color/colorTextTitle_light</item>
        <item name="subtitle_color">@color/colorTextSubtitle_light</item>
        <item name="content_color">@color/colorTextContent_light</item>
        <item name="card_color">@color/colorRoot_light</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
    </style>


    <style name="BlueTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/sail</item>
        <item name="colorPrimaryDark">@color/cornflower_blue</item>
        <item name="colorAccent">@color/polo_blue</item>
        <item name="root_color">@color/alice_blue</item>
        <item name="line_color">@color/link_water</item>
        <item name="title_color">@color/alice_blue</item>
        <item name="subtitle_color">@color/pattens_blue</item>
        <item name="content_color">@color/alice_blue</item>
        <item name="card_color">@color/pattens_blue</item>

        <item name="android:textColorPrimary">?attr/content_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme_Light.Translucent" parent="LightTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">?attr/actionMenuTextColor</item>
    </style>

    <style name="AppTheme_Dark.Translucent" parent="DarkTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBarPlus1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">?colorAccent</item>
        <item name="colorControlActivated">?colorAccent</item>
    </style>

    <style name="AppImagePreview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorDarkKnight</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/drawer_color</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/drawer_color</item>
    </style>

    <style name="TipButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/Gold</item>
        <item name="colorControlActivated">@color/DarkGray</item>
    </style>

    <style name="TTSActionButton" parent="Widget.Design.FloatingActionButton" >
        <item name="borderWidth">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:backgroundTint">@color/colorDarkKnight</item>
        <item name="android:focusable">true</item>
        <item name="elevation">0dp</item>
        <item name="hoveredFocusedTranslationZ">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="maxImageSize">48dp</item>
        <item name="backgroundTint">@color/tts_media_button_color</item>
        <item name="android:tint">@color/tts_media_button_color</item>
    </style>

    <style name="TTSTimeStopPicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="ReaderFAB" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ReaderFABOverLay</item>
    </style>

    <style name="ReaderFABOverLay" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">0%</item>

        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>

    </style>

</resources>
